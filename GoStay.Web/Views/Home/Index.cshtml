<script>
        function SubmitCompare(Id) {
        var Url = '@Url.Action("CompareTours","Home")';
        $.ajax({
            type: "GET",
            url: Url,
            data: { IdTour: Id },
            // datatype: "json",
            cache: false,
            async: false,
            success: function (data) {
                $('#compare-tour').html(data);
                $('#compare-tour').modal('show');
            },
