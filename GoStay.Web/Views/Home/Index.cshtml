        <div id="main-carousel-topIndex" class="owl-carousel mt-30 mb-30">
            @if (Model.ListTopSliderHotel == null)
            {
                return;
            }
            @foreach (var _item in Model.ListTopSliderHotel)
            {
                <div id="itemid_@_item.Id" class="item">
                    <div class="single-grid">
                        <div class="image">
                            <div class="swiper mySwiper">
                                <div class="swiper-wrapper">
                                    @foreach (var img in _item.Pictures)
                                    {
                                        <div class="swiper-slide">
                                            <a href="~/khach-san/@_item.Id/@_item.Slug" class="format-router">
                                                <img title="@_item.HotelName" data-src="https://cdn.realtech.com.vn/cdn-cgi/image/fit=cover,width=600,height=600,quality=80/@img"
                                                     src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mO8Uw8AAj0BXe1cD0IAAAAASUVORK5CYII="
                                                     alt="@_item.HotelName">
                                            </a>
                                        </div>
                                    }
                                </div>
                                <div class="swiper-pagination swiper-pagination-custom"></div>
                            </div>
                            <div class="top-info">
                                <div class="icon-hover">
                                     <div class="heart">
                                          <a href="#"><i class="fa-regular fa-heart"></i></a>
                                     </div>
                                </div>
                                @if (@_item.Review_score > 0)
                                {
                                    <div class="label">
                                        <ul class="label_review">
                                            <li><a href="javascript:void(0)"><i class="fa-solid fa-umbrella"></i> @_item.Review_score</a></li>
                                        </ul>
                                        <ul class="text_review">
                                            <li><a href="javascript:void(0)"> @AppConfigs.GetNameByPoint(@_item.Review_score)</a></li>
                                        </ul>
                                    </div>
                                }
                            </div>

                        </div>
                        <div class="content">
                            <div class="top-content">
                                <h3 class="title"><a href="~/khach-san/@_item.Id/@_item.Slug" class="format-router">@_item.HotelName </a></h3>
                                <ul class="rating">
                                    @for (int i = 0; i < _item.Rating; i++)
                                    {
                                        <li><i class="fa-solid fa-star"></i></li>
                                    }
                                </ul>
                                <ul class="info-list">
                                    <li><a href="javascript:void(0)"><i class="fa-solid fa-location-dot"></i>@_item.QuanHuyen - @_item.TinhThanh </a></li>
                                </ul>
                                <ul class="booking">
                                    <li><a href="javascript:void(0)">@_item.LastOrderDate</a></li>
                                </ul>
                            </div>
                            <div class="bottom-content">
                                <p class="base_price"><span>@AppConfigs.FormatCurrency("VND", Math.Round(@_item.DailyBasePrice,0))</span></p>
                                <p class="price"><span>@AppConfigs.FormatCurrency("VND", Math.Round(_item.ActualPrice,0))</span></p>
                                <p href="javascript:void(0)" class="label_discount">- @_item.Discount %</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
