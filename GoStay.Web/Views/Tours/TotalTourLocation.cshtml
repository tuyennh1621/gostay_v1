@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using GoStay.Common.Configuration
@using GoStay.DataDto.Air.ExtDOMSearchFlightsShort
@model List<TourLocation>
@using GoStay.DataDto.TourDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="popular-location row">
    @foreach (var item in Model)
    {
        <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-2 col mt-20">
            <div class="img-location">
                <a title="@item.Location" href="@item.Url"><img alt="@item.Location" data-src="@item.Img" src="@item.Img"></a>
            </div>
            <div class="title-location1">
                <a title="Tour đến @item.Location" href="@item.Url">@item.Location</a>
                <p>@item.Total Tour</p>
            </div>
        </div>
    }
</div>
