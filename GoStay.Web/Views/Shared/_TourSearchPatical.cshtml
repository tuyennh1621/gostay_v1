@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using GoStay.Common.Configuration
@using GoStay.Web.Model
@model MainSearchModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<input type="hidden" value="@Model.TT" name="IdTinhthanh" />
<input id="txtparaQuans" class="hidden" type="checkbox" value="@Model.QH" name="Quans" />
<input type="hidden" value="@Model.PX" name="IdPhuong" />
<input type="hidden" value="@Model.IDH" name="idHotel" />
@using GoStay.Service;


<div class="search">
    <div class="search-form">
        <div class="row margin-zero">
            <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-12 search-location">
                <div class="form-floating search-box">
                    <div class="d-flex align-items-center justify-between">
                        <input onClick="this.setSelectionRange(0, this.value.length)" type="text" class="form-control" 
                        id="txtInputTourSearch" value="@Model.strPlace" placeholder="@Localizer["Where are you wanna go?"] ">
                        <div class="delete-show-hide2 btnClearTours">
                            <i class="fa-solid fa-xmark ic-16-gray"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-12 select-date bd-left pl-20">
                <div class="row align-items-center">
                    <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-12">
                        <div class="title-date">
                            @Localizer["Date Start"]
                        </div>
                        <div class="input-date">
                            <label>@Localizer["Slowest"]: </label>
                            <input type="text" asp-for="@AppConfigs.StartDateTours" readonly="readonly" class="InputDate_from" id="hotel_InputDate_from" name="CheckinDate" placeholder="CheckIn">
                        </div>
                    </div>
                    
                </div>
            </div>
            
            <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-12 select-room bd-left pl-20">
                <div class="col-12">
                    <div class="button-search">
                        <button class="btn-search" type="submit" id="btnSubmitSearch"><i class="fa-solid fa-magnifying-glass ic-16-white"></i> @Localizer["Search"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="result_search_tour">
    <div class="result-room drop-location w-100">
        <div class="container">
            <div class="row pt-30 pb-30">
                <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-12 pb-20">
                    <div class="drop-left-result" id="toursgresult">
                        <div class="no-result" id="no-resultCachedKeyWordTour"><i class="fa-solid fa-search"></i><span>@Localizer["Enter the hotel name or the name of the city where you want to go"]</span></div>
                        <ul id="sgsCachedKeyWordTours" class="sgsCachedKeyWordTours">
                        </ul>
                        <div id="TourResultSuggest">
                        </div>
                    </div>
                </div>
                <div class="col-xxl-7 col-xl-7 col-lg-7 col-md-12" id="TotalTourLocation">
                    <h3 class="text-16-b">@Localizer["Highlights"]</h3>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/TopLocationTour.js?v=01" defer></script>

