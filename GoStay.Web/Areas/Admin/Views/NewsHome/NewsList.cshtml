            var topics = $("#idtopics_edit").val();

            var news = {
                Id :id,
                Title: title,
                IdCategory: category,
                Description: description,
                IdTopics: topics,
                LangId: language
            }
            $.ajax({
                type: "POST",
                traditional: true,
                data:
                {
                    "newsJson": JSON.stringify(news),
                },
                url: "@Url.Action("EditNews", "NewsHome")",
                success: function (data) {
                    SubmitAddForm();
                    alert("Hoan thanh");
                },
            })
        }

