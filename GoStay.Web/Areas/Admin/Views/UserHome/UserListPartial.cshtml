<div class="table-responsive">
    
    <table id="my_table" class="table table-bordered table-hover mb-0">
        <thead>
            <tr>
                <th>ID</th>
                <th>UserName</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>PhoneNumber </th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Data == null)
                    return;
                if (Model.Data.Count > 0)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <th>@item.Address </th>
                            <th>@item.Email </th>
                            <td>@item.MobileNo</td>
                            <td>@item.UserType</td>
                        </tr>
                    }

                }
            }
        </tbody>
    </table>
</div>
