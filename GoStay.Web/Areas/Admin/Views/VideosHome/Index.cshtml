        }
        function callAjax(url, action, param, isChangeSize) {
            $.ajax({
                url: url,
                type: action,
                data: JSON.stringify(param),
                dataType: "json",
                contentType: "application/json",
                success: function (data) {
                    if (data.Code == 0){
