        function reloadPageIndex(total, size){
            var pageDefault = ` <li class="pager"><a href="#" data-page="1">‹‹</a></li>
                                            <li class="active"><a href="#" data-page="1">1</a></li>`;
            
            $('#page-index-common').html('');
